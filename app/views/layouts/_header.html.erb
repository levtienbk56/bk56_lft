<header>
  <div class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to 'TravelAsk', root_path,  :class =>'navbar-brand'%>
          </div>
          <div class="navbar-collapse collapse">
            <div class="nav navbar-nav">              
                <div class="search">
                   <input type="text" class="form-control input-sm" maxlength="64" placeholder="キーワードでQ&Aを検索！" />
                   <button type="submit" class="btn-search btn-primary btn-sm">検索</button>
                </div>            
            </div>
            
            <ul class="nav navbar-nav navbar-right">

              <li><%= link_to 'ホーム', root_path %></li>
                <li><%= link_to 'ヘルプ', help_path %></li>
                <li><%= link_to 'TravelAskについて', about_path %></li>
            <% if signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= username %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'プロフィール', current_user %></li>
                  <li><%= link_to '設定', '#' %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'ログアウト', signout_path, method: "delete" %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to 'ログイン', signin_path %></li>
              <li><%= link_to '新規会員登録', signup_path %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
</header>
